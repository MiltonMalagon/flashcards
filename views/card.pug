extends app.pug

block card
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        #hint
          button(type='button') Hint
          p #{hint}
      .card-flip-wrap
        a(href=`${id}?side=${sideToShow}`)
          img.card-flip(src='/public/img/flip.svg')
      .card-next
        a(href=href=`/cards`)
          img(src='/public/img/next.svg')
    script(src='/public/js/app.js')
