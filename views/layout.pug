doctype html
html(lang='eng')
  head
    title Flash Cards
    link(rel='stylesheet' href='/public/stylesheets/style.css')
  body
    include includes/header.pug
    if !error
      section.namecard
        .namecard-hello
          if name
            p.namecard-greeting Welcome, #{name}!
            form.namecard-exit(action='/goodbye' method='POST')
              button(type='submit')
                img(src='/public/img/close.svg')
              //- button(type='submit') Goodbye
          else 
            p.namecard-greeting Hello, student!
        //- 
          Block for hello.pug (form), index.pug.
        block content
      block cards
    else 
      block crashed



