extends layout.pug 

block main 
  section.desk
    h1= `${error.message} - Status: ${error.status}`
    img.desk-items(src='/public/img/desk.svg')
    a.button-primary-small(href='/hello') Go Home
    .paper
      pre.stack-trace= error.stack
    .tear

